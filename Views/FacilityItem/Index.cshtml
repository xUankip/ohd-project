@model IEnumerable<AspnetCoreMvcStarter.Models.Facility>

@{
  ViewData["Title"] = "Facility List";
}

<div class="container mt-4">
  <h1>Facility List</h1>

  <p>
    <a asp-action="Create" class="btn btn-primary">Add New</a>
  </p>

  <table class="table table-striped table-hover">
    <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>Facility Name</th>
      <th>Description</th>
      <th>In-charge Person</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
      <tr>
        <td>@item.FacilityId</td>
        <td>@item.FacilityName</td>
        <td>@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
        <td>@(item.FacilityHead != null ? item.FacilityHead.FullName : "-")</td>
        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
        <td>
          <div class="btn-group" role="group" aria-label="Action buttons">
            <a asp-action="Details" asp-route-id="@item.FacilityId" class="btn btn-info btn-sm me-2">Details</a>
            <a asp-action="Edit" asp-route-id="@item.FacilityId" class="btn btn-warning btn-sm me-2">Edit</a>
            <a asp-action="Delete" asp-route-id="@item.FacilityId" class="btn btn-danger btn-sm">Delete</a>
          </div>
        </td>
      </tr>
    }
    </tbody>
  </table>
</div>
