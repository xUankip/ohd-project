@model AspnetCoreMvcStarter.Models.DashboardViewModel

@{
  ViewData["Title"] = "Welcome to the Online Help Desk";
}

<!-- Main Container -->
<div class="container-fluid mt-5">

  <!-- Hero Section (Full Screen Intro with Background) -->
  <div class="row justify-content-center align-items-center hero-section">
    <div class="col-md-8 text-center">
      <h1 class="display-3 font-weight-bold text-white">Welcome to the Online Help Desk</h1> >
      <p class="lead mb-4 text-white">Your one-stop solution for managing requests and support. Weâ€™re here to assist you every step of the way.</p> <!-- Changed text color to white -->
      <a href="#about" class="btn btn-light btn-lg shadow-lg">Learn More</a>
    </div>
  </div>

  <!-- About Section -->
  <div id="about" class="row justify-content-center py-5 bg-light">
    <div class="col-md-8 text-center">
      <h2 class="text-info mb-3">How Can We Help You?</h2>
      <p class="lead mb-4">We are here to assist you with any technical or customer support needs. Whether you need to report an issue or have a general inquiry, our team is ready to help you solve your problem quickly and effectively.</p>
    </div>
  </div>

  <!-- About Our Service Section -->
  <div class="row justify-content-center py-5">
    <div class="col-md-6 text-center">
      <div class="card shadow-lg border-0">
        <div class="card-header bg-info text-white">
          <i class="fas fa-info-circle"></i> About Our Service
        </div>
        <div class="card-body">
          <h5 class="card-title">What We Do</h5>
          <p class="card-text">
            Our Online Help Desk is designed to assist users like you in resolving any challenges or questions that arise. From submitting requests to tracking their status, we ensure a smooth and efficient process for getting the help you need.
          </p>
          <p class="card-text">
            With a dedicated support team, we provide top-tier assistance and ensure that your concerns are addressed in a timely manner. Our goal is to make sure you have the best experience possible.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Meet the Team Section -->
  <div class="row justify-content-center py-5 bg-light">
    <div class="col-md-8 text-center">
      <h2 class="text-info mb-3">Meet Our Support Team</h2>
      <p class="lead mb-4">Our team is composed of professionals who are passionate about providing excellent support and ensuring you have a seamless experience with our service.</p>
      <div class="row justify-content-center">
        <div class="col-md-3 mb-4">
          <div class="card shadow-lg border-0">
            <img src="https://4kwallpapers.com/images/walls/thumbs/20885.jpg" class="card-img-top square-img" alt="Team Member">
            <div class="card-body">
              <h5 class="card-title">John Doe</h5>
              <p class="card-text">Support Specialist</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card shadow-lg border-0">
            <img src="https://4kwallpapers.com/images/walls/thumbs/20928.jpg" class="card-img-top square-img" alt="Team Member">
            <div class="card-body">
              <h5 class="card-title">Jane Smith</h5>
              <p class="card-text">Technical Expert</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card shadow-lg border-0">
            <img src="https://4kwallpapers.com/images/walls/thumbs/20954.jpg" class="card-img-top square-img" alt="Team Member">
            <div class="card-body">
              <h5 class="card-title">Emily White</h5>
              <p class="card-text">Customer Support</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Call-to-Action Section -->
  <div class="row justify-content-center py-5" style="background-color: #f8f9fa;">
    <div class="col-md-8 text-center">
      <h2 class="text-info mb-3">Need Assistance?</h2>
      <p class="lead mb-4">Feel free to get in touch with us for any questions or support you may need. We're here to help!</p>
      <a href="#contact" class="btn btn-danger btn-lg shadow-lg">Contact Us</a>
    </div>
  </div>

</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

<!-- Custom Styles for Enhanced Homepage -->
<style>
  /* Hero Section Styles */
  .hero-section {
    position: relative;
    height: 90vh;
    background: url('https://png.pngtree.com/thumb_back/fh260/background/20230606/pngtree-group-of-business-people-standing-and-looking-serious-group-of-business-photo-image_3037893.jpg') no-repeat center center;
    background-size: cover;
    color: white;
  }

  /* Blurred Background */
  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: inherit;
    background-size: inherit;
    background-position: inherit;
    filter: blur(8px);
    z-index: 1;
  }

  .hero-section .col-md-8 {
    position: relative;
    z-index: 2;
  }

  .card {
    border-radius: 15px;
  }

  .card-body {
    padding: 2rem;
  }

  .card-header {
    font-size: 1.25rem;
    font-weight: bold;
  }

  .display-3 {
    font-size: 3rem;
    font-weight: bold;
  }

  .text-muted {
    color: #6c757d;
  }

  .text-info {
    color: #17a2b8;
  }

  .lead {
    font-size: 1.2rem;
  }

  .btn-lg {
    padding: 1.2rem 2.5rem;
    font-size: 1.2rem;
  }

  .card-img-top {
    max-height: 200px;
    object-fit: cover;
  }

  /* Smooth Scrolling for Anchors */
  html {
    scroll-behavior: smooth;
  }
</style>
