@model AspnetCoreMvcStarter.Models.Request

<h2>Create Request</h2>

<form asp-action="Create" asp-controller="Requests" method="post">
  <div class="form-group">
    <label asp-for="RequestorId"></label>
    <select asp-for="RequestorId" asp-items="ViewBag.Users" class="form-control" required>
      <option value="">-- Select Requestor --</option>
    </select>
    <span asp-validation-for="RequestorId" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="FacilityId"></label>
    <select asp-for="FacilityId" asp-items="ViewBag.Facilities" class="form-control" required>
      <option value="">-- Select Facility --</option>
    </select>
    <span asp-validation-for="FacilityId" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="ItemId"></label>
    <select asp-for="ItemId" asp-items="ViewBag.Items" class="form-control" required>
      <option value="">-- Select Item --</option>
    </select>
    <span asp-validation-for="ItemId" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="QuantityRequested"></label>
    <input asp-for="QuantityRequested" class="form-control" type="number" min="1" required />
    <span asp-validation-for="QuantityRequested" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="SeverityLevel"></label>
    <select asp-for="SeverityLevel" class="form-control">
      <option value="Low">Low</option>
      <option value="Medium">Medium</option>
      <option value="High">High</option>
    </select>
    <span asp-validation-for="SeverityLevel" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control" required></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
  </div>

  <div class="form-group">
    <label>Comment (Optional)</label>
    <textarea name="commentText" class="form-control"></textarea>
  </div>

  <button type="submit" class="btn btn-success">Submit</button>
</form>
