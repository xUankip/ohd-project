@model AspnetCoreMvcStarter.Models.Request

@{
  ViewData["Title"] = "Edit Request";
}

<h2>Edit Request</h2>

<form asp-action="Edit">
  <input type="hidden" asp-for="RequestId" />

  <div class="form-group">
    <label asp-for="RequestorId"></label>
    <select asp-for="RequestorId" asp-items="ViewBag.Users" class="form-control"></select>
  </div>
  <div class="form-group">
    <label asp-for="FacilityId"></label>
    <select asp-for="FacilityId" asp-items="ViewBag.Facilities" class="form-control"></select>
  </div>
  <div class="form-group">
    <label asp-for="FacilityItemId"></label>
    <select asp-for="FacilityItemId" asp-items="ViewBag.Items" class="form-control"></select>
  </div>
  <div class="form-group">
    <label asp-for="QuantityRequested"></label>
    <input asp-for="QuantityRequested" class="form-control" />
  </div>
  <div class="form-group">
    <label asp-for="Status"></label>
    <select asp-for="Status" class="form-control">
      <option value="Open">Open</option>
      <option value="Approved">Approved</option>
      <option value="Rejected">Rejected</option>
      <option value="Closed">Closed</option>
    </select>
  </div>
  <button type="submit" class="btn btn-success">Save</button>
  <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
