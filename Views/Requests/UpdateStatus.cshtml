@model AspnetCoreMvcStarter.Models.Request

@{
  ViewData["Title"] = "Update Request Status";
}

<h2>Update Status</h2>

<form asp-action="UpdateStatus" asp-controller="Requests" method="post">
  <input type="hidden" asp-for="RequestId" />

  <div class="form-group">
    <label>Select New Status</label>
    <select name="status" class="form-control" required>
      @foreach (var status in ViewBag.StatusOptions as List<SelectListItem>)
      {
        <option value="@status.Value">@status.Text</option>
      }
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Update</button>
  <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
